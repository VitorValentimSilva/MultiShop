{
  // * Defines where i18n Ally should look for translation files
  // * This helps the extension detect and autocomplete translation keys
  "i18n-ally.localesPaths": ["app/_lib/i18n"],

  // * Custom dictionary words for the spell checker (cSpell)
  // * Prevents false positives for common technical/color terms
  "cSpell.words": ["rgba", "srgb", "color-mix", "vercel"]
}
